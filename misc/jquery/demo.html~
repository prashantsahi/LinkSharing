<script>
 $(document).ready(function(){
    $('#blue').click(function(){
        alert('blue');
    });
	 $('.red').click(function(){
        $('$this').css("background","red","height","50px")
    });

	$('.green').hover(function(){
        $('.green').css("background","blue")
});

});
	
</script>
</head>
